/dts-v1/;
/plugin/;

#include <dt-bindings/clock/imx8mp-clock.h>

/ {
	fragment@3100 {
		target = <&i2c5>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			ov5640_cam1: ov5640_mipi@3c {
				compatible = "ovti,ov5640";
				reg = <0x3c>;
				clocks = <&clk IMX8MP_CLK_CLKOUT2>;
				clock-names = "xclk";
				assigned-clocks = <&clk IMX8MP_CLK_CLKOUT2_SEL>;
				assigned-clock-parents = <&clk IMX8MP_CLK_24M>;
				assigned-clock-rates = <24000000>;
				csi_id = <0>;
				mclk = <24000000>;
				mclk_source = <0>;
				mipi_csi;
				status = "okay";

				port {
					ov5640_mipi_1_ep: endpoint {
						remote-endpoint = <&mipi_csi1_ep>;
						data-lanes = <1 2>;
						clock-lanes = <0>;
					};
				};
			};
		};
	};

	fragment@3101 {
		target = <&mipi_csi_1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";
			port@1 {
				reg = <1>;
				mipi_csi1_ep: endpoint {
					remote-endpoint = <&ov5640_mipi_1_ep>;
					data-lanes = <2>;
					csis-hs-settle = <13>;
					csis-clk-settle = <2>;
					csis-wclk;
				};
			};
		};
	};

	fragment@3102 {
		target = <&cameradev>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@3103 {
		target = <&isi_1>;
		__overlay__ {
			status = "okay";

			cap_device {
				status = "okay";
			};
		};
	};

	fragment@3104 {
		target = <&mipi_dsi>;
		__overlay__ {
			status = "okay";
		};
	};
};
